<div class="col-md-6">
  <div class="card p-4">
    <h1 class="card-title">Movies Index Hello</h1>
    <% @list.movies.each do |movie| %>
      <div class="card mb-3">
        <div class="row no-gutters">
          <div class="col-md-4">
            <%= image_tag movie.poster_url, class: "card-img" %>
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title"><%= movie.title %></h5>
              <p class="card-text"><%= movie.overview %></p>
              <p class="card-text"><small class="text-muted"><strong>Rating:</strong> <%= movie.rating %></small></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <div class="card-body d-flex justify-content-between">
      <%= link_to "Add a Movie", new_list_bookmark_path(@list), class: "btn btn-secondary" %>
      <%= link_to "All Lists", lists_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>
