<div class="card mx-auto w-75">
  <% if @list.image.present? %>
    <div class="container-fluid p-0">
      <div class="card-img-top banner" style="background-image: url(<%= cl_image_path(@list.image, crop: :fill) %>)">
        <div class="overlay d-flex flex-column justify-content-end">
          <h1 class="card-title text-white mb-0"><%= @list.name %></h1>
        </div>
      </div>
    </div>
  <% end %>

  <div class="card-body">
    <div class="d-flex justify-content-end mb-3">
      <%= link_to "Add a Movie", new_list_bookmark_path(@list), class: "btn btn-secondary mr-3" %>
      <%= link_to "All Lists", lists_path, class: "btn btn-secondary" %>
    </div>
    <h2>Bookmarks in this list:</h2>
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card mb-3">
        <div class="row no-gutters">
          <div class="col-md-4">
            <%= image_tag bookmark.movie.poster_url, class: "card-img" %>
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h3 class="card-title"><%= bookmark.movie.title %></h3>
              <h4 class="card-text"><%= bookmark.comment %></h4>
              <p class="card-text"><%= bookmark.movie.overview %></p>
              <p class="card-text"><small class="text-muted"><strong>Rating:</strong> <%= bookmark.movie.rating %></small></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
