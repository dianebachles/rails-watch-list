<div class="container-fluid p-4">
  <div class="row">
    <div class="col-md-6">
      <h1 class="card-title">Lists:</h1>
      <ul class="list-group">
        <% @lists.each do |list| %>
          <li class="list-group-item d-flex align-items-center">
            <% if list.image.present? %>
              <%= cl_image_tag(list.image, height: 60, crop: :fill, class: "mr-3") %>
            <% end %>
            <%= link_to list.name, list_path(list), class: "link" %>
          </li>
        <% end %>
      </ul>
      <%= link_to "Add a List", new_list_path, class: "btn btn-secondary mt-3" %>
    </div>
  </div>
</div>
