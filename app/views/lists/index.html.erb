<div class="container-fluid p-4">
  <div class="row">
    <div class="col-md-6">
      <h1 class="card-title">Lists:</h1>
      <ol class="list-group">
        <% @lists.each do |l| %>
          <li class="list-group-item"><%= link_to l.name, list_path(l), class: "link" %></li>
        <% end %>
      </ol>
      <%= link_to "Add a List", new_list_path, class: "btn btn-secondary mt-3" %>
    </div>
    <div class="col-md-6">
      <h1 class="card-title">Movies Index Hello</h1>
      <% @movies.each do |movie| %>
        <div class="card mb-3">
          <%= image_tag movie.poster_url, class: "card-img-top" %>
          <div class="card-body">
            <h5 class="card-title"><%= movie.title %></h5>
            <p class="card-text"><%= movie.overview %></p>
            <p class="card-text"><small class="text-muted">Rating: <%= movie.rating %></small></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

